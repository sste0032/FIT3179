{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of Conflicts Across the Globe",
  "width": 500,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/sste0032/FIT3179_Homework/main/Homework%20W9/Data/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "transform": [
        {
          "calculate": "'No conflicts recorded in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/sste0032/FIT3179_Homework/main/Homework%20W9/Data/map_data.csv"
            },
            "key": "location",
            "fields": ["no_conflicts", "avg_intensity", "avg_duration"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "no_conflicts",
          "type": "quantitative",
          "scale": {"scheme": "lightorange"}
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "no_conflicts", "type": "ordinal"},
          {"field": "avg_intensity", "type": "quantitative"},
          {"field": "avg_duration", "type": "ordinal"}
        ]
      }
    },
    {
      "data": {
      "url": "https://raw.githubusercontent.com/sste0032/FIT3179_Homework/main/Homework%20W9/Data/ne_110m.json",
      "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightblue"}
    }
  ],
  "config": {}
}
